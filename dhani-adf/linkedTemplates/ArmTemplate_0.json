						"outputs": [
							{
								"referenceName": "Output",
								"type": "DatasetReference",
								"parameters": {
									"FileName": {
										"value": "@concat(replace(pipeline().parameters.FileName,'.csv',''),utcnow(),'.csv')",
										"type": "Expression"
									}
								}
							}
						]
					},
					{
						"name": "DeleteBlob",
						"type": "Delete",
